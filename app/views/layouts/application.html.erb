<!DOCTYPE html>
<html>
  <head>
    <title>HouseholdDuties</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p>Current user: <%= current_user.email if user_signed_in? %></p>
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-warning btn-sm"%>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
