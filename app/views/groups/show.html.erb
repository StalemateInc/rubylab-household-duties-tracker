<div class="container">
  <div class="row">
    <div class="col-sm">
      <%= link_to "Back", groups_path %>
      <hr/>
      Group name: <%= @group.name %><br/>
      Is public: <%= @group.visible_to_all %><br/>
      <% if can? :edit, @group %>
        <%= link_to "Edit group", edit_group_path(@group), class: "btn btn-warning btn-md"%>
      <% end %>
      <% if can? :add_users, @group %>
        <%= link_to "Invite user", group_member_new_path(@group), class: "btn btn-md btn-info" %>
      <% end %>
      <%= link_to "See tasks", group_tasks_path(@group), class: "btn btn-md btn-success" %>
    </div>
  </div>
</div>