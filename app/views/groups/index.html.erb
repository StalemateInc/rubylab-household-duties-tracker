<% console %>
<div class="container">
  <%= render partial: "users/stats", locals: {user: current_user} %>
  <div class="row">
    <div class="col-md">
      <h2>Public groups:</h2>
      <% if @public_groups.empty? %>
        No public groups present, sorry.
      <% else %>
        <div class="scrolling-wrapper-flexbox">
        <%  @public_groups.each do |g|  %>
          <%= render partial: "group_card", locals: {group: g} %>
        <%  end  %>
        </div>
      <% end %>
      <hr/>
      <h2>My groups:</h2>
      <div class="scrolling-wrapper-flexbox">
        <% @user_groups.each do |g| %>
          <%= render partial: "group_card", locals: {group: g} %>
        <% end %>
      </div>
    </div>
  </div>
</div>