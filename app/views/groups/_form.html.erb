<div class="form-inputs">
  <%= f.input :name,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "email" } %>
  <%= f.input :password,
              required: true,
              autofocus: false,
              input_html: { autocomplete: "password" } %>
  <%= f.input :visible_to_all, as: :boolean %>
</div>