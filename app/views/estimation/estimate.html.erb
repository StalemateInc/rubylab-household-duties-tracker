<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Please, estimate required time</h2>
      <%= simple_form_for(@task, url: group_task_estimate_path, method: :post) do |f| %>
        <%= f.error_notification %>

        <%= render :partial => 'form', locals: {f: f} %>

        <div class="form-actions">
          <%= f.button :submit, "Confirm estimate", class: "btn btn-md btn-primary" %>
          <%= link_to "Back", group_task_path(params[:group_id], params[:task_id]), class: "btn btn-md btn-secondary"%>
        </div>

      <% end %>
    </div>
  </div>
</div>