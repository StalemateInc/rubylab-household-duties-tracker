<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Invite user:</h2>
      <%= simple_form_for(:user, path: group_member_new_path, method: :post) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Invite" %>
          <%= link_to "Back", group_path(@group), class: "btn btn-info btn-md"%>
        </div>
      <% end %>
    </div>
  </div>
</div>