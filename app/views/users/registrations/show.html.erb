<div class="container">
  <div class="row">
    <div class="col-sm-7 col-md-5">

      <div class="text-center">
        <img class="profile-pic img-responsive rounded-circle" src="https://www.startalkradio.net/wp-content/uploads/2015/03/elon-musk-600x600-300x300.jpg" alt="avatar">
        <h2 class="mt-2"><%= current_user.display_name %></h2>
        <div>
          <i class="fab fa-facebook-f btn btn-sm btn-primary"></i>
          <i class="fab fa-twitter btn btn-sm btn-primary"></i>
          <i class="fab fa-vk btn btn-sm btn-primary"></i>
          <i class="fab fa-google btn btn-sm btn-danger"></i>
        </div>
      </div><br>

      <div class="profile-user-info">
        <div class="profile-info-row">
          <div class="profile-info-name"> Name </div>

          <div class="profile-info-value">
            <span><%= current_user.display_name %></span>
          </div>
        </div>

        <div class="profile-info-row">
          <div class="profile-info-name"> Address </div>

          <div class="profile-info-value">
            <i class="fa fa-map-marker light-orange bigger-110"></i>
            <span>Netherlands</span>
            <span>Amsterdam</span>
          </div>
        </div>

        <div class="profile-info-row">
          <div class="profile-info-name"> Date of birth </div>

          <div class="profile-info-value">
            <span><%= current_user.created_at %></span>
          </div>
        </div>

        <div class="profile-info-row">
          <div class="profile-info-name"> Joined </div>

          <div class="profile-info-value">
            <span><%= current_user.created_at %></span>
          </div>
        </div>
      </div>


    </div>
    <div class="col-sm-5 col-md-7">
      <ul class="list-group">
        <li class="list-group-item text-muted">Activity <i class="fas fa-tachometer-alt"></i></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Average rating</strong></span><i class="fas fa-star ml-1"></i>4.2</li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Created tasks</strong></span> 6</li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Finished tasks</strong></span> 2</li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Active tasks</strong></span> 3</li>
      </ul>
    </div>
  </div>
  <div class="row">
    <%= link_to "Back", :back, class: "btn btn-md btn-primary mx-3 my-2" %><br/>
    <%= link_to "Edit profile", user_profile_edit_path, class: "btn btn-md btn-warning mx-3 my-2" %>
    <%= link_to "Cancel my account", cancel_user_registration_path, class: "btn btn-md btn-danger mx-3 my-2", data: { confirm: "Are you sure?" } %>
  </div>
</div>