<div class="form-inputs" xmlns="">
  <%= f.input :title, required: true, autofocus: true, input_html: { autocomplete: "title" } %>
  <%= f.input :description, input_html: { autocomplete: "description" } %>
  <div class="row d-none">
    <div class="col-lg-12">
      <%= f.input :ttc, label: false, as: :string, input_html: { value: "0 hours 1 minute" } %>
      <%= f.input :creator_id, label: false, input_html: { value: current_user.id } %>
    </div>
  </div>
  <%= simple_fields_for :no_model_ttc do |n| %>
  <div class="row">
    <div class="col-lg-8 col-sm-12">
      <%= n.input :slider, as: :range, label: "Time to complete", input_html: {min: "1", max: "4320", step: "2", value: "2"} %>
    </div>
    <div class="col-lg-4 col-sm-12">
      <div class="row">
        <div class="col-lg-3 col-sm-3">
          <%= n.input :hours, as: :numeric, label: false,  input_html: { max: "72", min: "0" }%>
        </div>
        <div class="col-lg-2 col-sm-3">
          Hours
        </div>
        <div class="col-lg-3 col-sm-3">
          <%= n.input :minutes, as: :numeric, label: false,  input_html: { max: "60", min: "0" }%>
        </div>
        <div class="col-lg-2 col-sm-3">
          Minutes
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= f.input :executor_id, collection: @group.users.map {|u| [u.email, u.id] }, include_blank: false %>
</div>