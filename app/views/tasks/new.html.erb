<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Create a new task</h2>
      <%= simple_form_for(@task, url: group_tasks_path, method: :post) do |f| %>
        <%= f.error_notification %>

        <%= render :partial => 'form', locals: {f: f} %>

        <div class="form-actions">
          <%= f.button :submit, "Create a task" %>
          <%= link_to "Back", group_tasks_path, class: "btn btn-info btn-md" %>
        </div>
      <% end %>
    </div>
  </div>
</div>