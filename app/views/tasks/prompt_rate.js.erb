form = "<%= j render "rate_form" %>"
$form = $(form);
$form.on('hidden.bs.modal', function (e) {
    $form.remove();
});
$form.on("shown.bs.modal", function (e) {
    var locale = Cookies.get('locale');
    $('#task_rating').rating( {showCaption: false, showClear: true, language: locale, showLabel: false} );
});
$form.modal('show');