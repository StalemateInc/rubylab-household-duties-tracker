<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-12 card-container">
      <div class="card mx-auto">
        <div class="card-content">
          <h2><%= t('devise.form.password_change.heading') %></h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password,
                          label: t('devise.form.password_change.new_password'),
                          required: true,
                          autofocus: true,
                          hint: (t('user.profile.register.min_char_hint', var: @minimum_password_length) if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation, label: t('devise.form.password_change.confirm'), required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t('devise.form.password_change.action') %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>